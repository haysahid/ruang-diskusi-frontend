<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="subTitleText">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="sectionText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="normalText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="bodyText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="buttonText">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="attentionText">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tint_100</item>
    </style>

    <style name="tableHeaderText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="tableRowText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tint_100</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>